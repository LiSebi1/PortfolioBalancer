{
  "author": "Sebastian Linecker",
  "description": "Rebalancing-Tool f√ºr Bitpanda (Electron + Vite)",
  "name": "bitpanda-balancer",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
   "dev": "concurrently \"cross-env VITE_DEV_SERVER=true vite\" \"npm:dev:main\" \"npm:dev:preload\" \"wait-on http://localhost:5173 && electron .\"",

    "dev:main": "esbuild electron/main.ts --bundle --platform=node --format=cjs --packages=external --external:electron --external:keytar --external:better-sqlite3 --outfile=electron/main.cjs --watch",
    "dev:preload": "esbuild electron/preload.ts --bundle --platform=node --format=cjs --packages=external --external:electron --outfile=electron/preload.cjs --watch",

    "build:ui": "vite build",
    "build:main": "esbuild electron/main.ts --bundle --platform=node --format=cjs --packages=external --external:electron --external:keytar --external:better-sqlite3 --outfile=electron/main.cjs",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --format=cjs --packages=external --external:electron --outfile=electron/preload.cjs",

    "build": "npm run build:ui && npm run build:main && npm run build:preload && electron-builder",

    "start": "electron ."
}
,
  "dependencies": {
    "axios": "^1.7.2",
    "better-sqlite3": "^9.4.0",
    "chart.js": "^4.4.1",
    "keytar": "^7.9.0",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.9",
    "typescript": "^5.4.2",
    "vite": "^5.2.9",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.sebastian.bitpanda-balancer",
    "asarUnpack": ["**/*.node"],
    "files": ["dist/**", "electron/**", "node_modules/**", "package.json"],
    "extraMetadata": { "main": "electron/main.cjs" },
    "directories": {
      "buildResources": "build",
      "output": "release"       
    },
    "win": { "target": ["nsis"] },
    "mac": { "target": ["dmg"] },
    "nsis": { "oneClick": false, "allowToChangeInstallationDirectory": true }
  }
}
